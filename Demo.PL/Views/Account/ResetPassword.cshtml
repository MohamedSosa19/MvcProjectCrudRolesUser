@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="ResetPassword">
            <div asp-validation-summary="All"></div>
      
            <input class="text" asp-for="NewPassword" placeholder="Password" required=""> <!-- Updated to match "Password" -->
            <input class="text" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
            <input type="submit" value="SIGNUP">
        </form>
    </div>
</div>

@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}


